@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bringit</title>
    <link rel="stylesheet" href="site.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>

    <main>
        <section class="products-container">
            <article class="product">
                <img src="1.jpg" alt="Product 1">
                <h2>t-shirt</h2>
                <p>Woven t-shirt.</p>
                <button>Add to Cart</button>
            </article>
            <article class="product">
                <img src="2.jpg" alt="Product 2">
                <h2>Denim Jacket</h2>
                <p>New fashion jacket with denim material.</p>
                <button>Add to Cart</button>
            </article>
            <article class="product">
                <img src="3.jpg" alt="Product 3">
                <h2>White T-shirt</h2>
                <p>4-pack of white t-shirts.</p>
                <button>Add to Cart</button>
            </article>
            <article class="product">
                <img src="4.jpg" alt="Product 4">
                <h2>Jacket</h2>
                <p>Black winter jacket.</p>
                <button>Add to Cart</button>
            </article>
        </section>
    </main>
  
    <script>
    $(document).ready(function() {
        $(".menu-toggle").click(function() {
            $(".nav-links").toggleClass("active");
        });

        $(".cancel-button").click(function() {
            $(".nav-links").removeClass("active");
        });
    });
    </script>
</body>
</html>
